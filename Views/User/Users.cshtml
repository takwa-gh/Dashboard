@using Dashboard.ViewModels
@model List<UserViewModel>

@{
    ViewData["Title"] = "Users List";
}
<head>
    <!-- Ajouter Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link rel="stylesheet" href="~/css/gestion.css"/>
</head>

<!-- Card contenant la table des utilisateurs -->
<div class="card p-4 shadow-sm">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>List of users</h2>
        <div class="d-flex align-items-center gap-3">
            <a class="btn btn-dark btn-sm" href="@Url.Action("Create", "User")">
                <i class="fas fa-user-plus"></i>
            </a>
        </div>
    </div>
    <div class="table-responsive table-wrapper">
            <table class="table table-hover align-middle">
                <thead class="thead-light">
                    <tr>
                        <th>UserName</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.UserName</td>
                            <td>@user.Email</td>
                            <td>@user.Role</td>
                            <td>
                            <a class="btn btn-sm btn-dark" asp-action="Edit" asp-route-id="@user.UserId">
                                    <i class="fas fa-pencil-alt"></i> Edit
                                </a>
                            <form asp-action="DeleteConfirmed" asp-controller="User" asp-route-id="@user.UserId" method="post">
                                
                            <button type="submit" class="btn btn-sm btn-danger" >
                                    <i class="fas fa-trash"></i> Delete
                                </button>
                             </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
</div>

