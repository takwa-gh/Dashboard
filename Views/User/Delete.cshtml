@using Dashboard.ViewModels
@model UserViewModel


@{
    ViewData["Title"] = "Delete User";
    <link rel="stylesheet" href="~/css/gestion.css" />
   
}


    <!-- Card de confirmation de suppression -->
    <div class="card p-4 shadow-sm">

       
    <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="text-danger"> Confirm Deletion!</h2>
        </div>
        <div class="card-body">
            <div class="alert alert-warning">

                <strong>Warning!</strong> The user will be permanently deleted.
            </div>

            <p>Are you sure you want to delete the following user?</p>

            <!-- Informations sur l'utilisateur -->
            <ul class="list-group mb-3">
                <li class="list-group-item"><strong>Email:</strong> @Model.Email</li>
                <li class="list-group-item"><strong>UserName:</strong> @Model.UserName</li>
            </ul>

            <!-- Formulaire de confirmation de suppression -->
            <form asp-action="DeleteConfirmed" method="post">
                <input type="hidden" name="id" value="@Model.UserId" />
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Delete
                    </button>
                    <a asp-action="Users" class="btn btn-secondary">
                    Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

}