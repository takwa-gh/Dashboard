@model Dashboard.ViewModels.AddAwtViewModel

@{
    ViewData["Title"] = "Add AWT Value";
    <link rel="stylesheet" href="~/css/gestion.css" />
}

<div class="card p-4 shadow-sm">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">@ViewData["Title"]</h2>
    </div>

    <form asp-action="AddAWT" method="post" class="needs-validation">
        <input asp-for="StationId" type="hidden" />

        <div class="mb-3">
           
            <input asp-for="Value" class="form-control" placeholder="Enter AWT value" />
            <span asp-validation-for="Value" class="text-danger"></span>
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-danger">
                 Add
            </button>
            <a asp-action="Stations" class="btn btn-outline-secondary">
                Cancel
            </a>
        </div>
    </form>
</div>
