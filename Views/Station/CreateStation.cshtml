@model Dashboard.ViewModels.CreateStationPageViewModel

<form asp-action="CreateStation" method="post">
    <div class="form-group">
        <label asp-for="Station.StationName" class="control-label"></label>
        <input asp-for="Station.StationName" class="form-control" />
        <span asp-validation-for="Station.StationName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Station.lineId" class="control-label">Select Line</label>
        <select asp-for="Station.lineId" class="form-control">
            <option value="">--Select Line--</option>
            @foreach (var line in Model.Lines)
            {
                <option value="@line.Id">@line.Name</option>
            }
        </select>
        <span asp-validation-for="Station.lineId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Station.GumValue" class="control-label"></label>
        <input asp-for="Station.GumValue" class="form-control" />
        <span asp-validation-for="Station.GumValue" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Station.AwtValue" class="control-label"></label>
        <input asp-for="Station.AwtValue" class="form-control" />
        <span asp-validation-for="Station.AwtValue" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create Station</button>
</form>
