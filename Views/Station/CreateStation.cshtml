@model Dashboard.ViewModels.CreateStationViewModel

@{
    ViewData["Title"] = "Create Station";
    <link rel="stylesheet" href="~/css/gestion.css" />
}

<div class="card p-4 shadow-sm">
    <h2>Create a New Station</h2>

    <form asp-action="CreateStation" method="post">
        <input asp-for="UserId" type="hidden" />

        <div asp-validation-summary="All" class="text-danger mb-3"></div>

        <div class="form-group mb-3">
            <label asp-for="StationName" class="form-label"></label>
            <input asp-for="StationName" class="form-control" />
            <span asp-validation-for="StationName" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="PartNumber" class="form-label"></label>
            <input asp-for="PartNumber" class="form-control" />
            <span asp-validation-for="PartNumber" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="DirectOperator" class="form-label"></label>
            <input asp-for="DirectOperator" class="form-control" />
            <span asp-validation-for="DirectOperator" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="IndirectOperator" class="form-label"></label>
            <input asp-for="IndirectOperator" class="form-control" />
            <span asp-validation-for="IndirectOperator" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-end gap-2">
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-plus"></i> Create
            </button>
            <a asp-action="Stations" class="btn btn-outline-secondary">
                <i class="fas fa-times"></i> Cancel
            </a>
        </div>
    </form>
</div>
