@model Dashboard.ViewModels.CreateStationViewModel

<form asp-action="CreateStation" method="post">
    <div class="form-group">
        <label asp-for="StationName" class="control-label"></label>
        <input asp-for="StationName" class="form-control" />
        <span asp-validation-for="StationName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LineId" class="control-label">Select Line</label>
        <select asp-for="LineId" class="form-control" asp-items="Lines">
            <option value="">--Select Line--</option>
        </select>
        <span asp-validation-for="LineId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="GumValue" class="control-label"></label>
        <input asp-for="GumValue" class="form-control" />
        <span asp-validation-for="GumValue" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AwtValue" class="control-label"></label>
        <input asp-for="AwtValue" class="form-control" />
        <span asp-validation-for="AwtValue" class="text-danger"></span>
    </div>

    <!-- Autres champs -->
    <button type="submit" class="btn btn-primary">Create Station</button>
</form>
