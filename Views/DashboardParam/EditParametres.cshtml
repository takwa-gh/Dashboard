@using Dashboard.ViewModels
@model DashboardParamViewModel
@{
    ViewBag.Title = "Edit Dashboard Parameters";
    var isReadOnly = ViewBag.IsReadOnly != null && (bool)ViewBag.IsReadOnly;
    var readOnlyAttr = isReadOnly ? "readonly=\"readonly\"" : "";

}

<h2>Dashboard Parameters</h2>

<form asp-action="EditParametres" method="post">
    <div class="form-group">
        <label asp-for="ConveyorSpeed"></label>
        <input asp-for="ConveyorSpeed" class="form-control" readonly="@isReadOnly" />
        <span asp-validation-for="ConveyorSpeed" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TactTime"></label>
        <input asp-for="TactTime" class="form-control" readonly="@isReadOnly" />
        <span asp-validation-for="TactTime" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TargetQuantity"></label>
        <input asp-for="TargetQuantity" class="form-control" readonly="@isReadOnly" />
        <span asp-validation-for="TargetQuantity" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ActualOutput"></label>
        <input asp-for="ActualOutput" class="form-control" readonly="@isReadOnly" />
        <span asp-validation-for="ActualOutput" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CycleTime"></label>
        <input asp-for="CycleTime" class="form-control" readonly="@isReadOnly" />
        <span asp-validation-for="CycleTime" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="WorkingTime"></label>
        <input asp-for="WorkingTime" class="form-control" readonly="@isReadOnly" />
        <span asp-validation-for="WorkingTime" class="text-danger"></span>
    </div>



    @if (!isReadOnly)
    {
        <button type="submit" class="btn btn-primary">Save</button>
    }
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
